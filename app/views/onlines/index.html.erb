<div class="row">
  <div class="col-md-6">
    <h1>Users</h1>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Full name</th>
      <th>Email</th>
      <th>Permission</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td>
        <% if user.avatar.exists? %>
        <img src="<%= user.avatar.url %>" class="avatar-small">
        <% end %>
      </td>
      <td><%= user.full_name %></td>
      <td><%= user.email %></td>
      <td><%= user.role %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="row">
  <div class="col-sm-6">
    <%= page_entries_info @users %>
  </div>
  <div class="col-sm-6">
    <%= paginate @users %>
  </div>
</div>
