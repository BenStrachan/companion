<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title">Companion requests</h3>
  </div>
  <div class="box-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>City</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @advertisements.each do |advertisement| %>
          <tr>
            <td><%= advertisement.title %></td>
            <td><%= advertisement.description %></td>
            <td><%= advertisement.city %></td>
            <td>
          <%= link_to 'Show', admin_advertisement_path(advertisement) %> |
          <%= link_to 'Edit', edit_admin_advertisement_path(advertisement) %> |
          <%= link_to 'Destroy', admin_advertisement_path(advertisement), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="box-footer">
<div class="row">
  <div class="col-sm-6">
    <%= page_entries_info @advertisements %>
  </div>
  <div class="col-sm-6">
    <%= paginate @advertisements %>
  </div>
</div>
</div>
</div>
